# Maintainer: Peter Kotvan <peter dot kotvan at gmail dot com>
pkgname=lumail-git
_gitname=lumail
pkgver=3e566b5
pkgrel=1
pkgdesc="Modern console-based email client developed for GNU/Linux."
arch=('i686' 'x86_64')
url="http://lumail.org/"
license=('GPLv2')
depends=('lua51' 'mimetic' 'ncurses' 'pcre')
makedepends=('git')
provides=('lumail')
conflicts=('lumail')
backup=('etc/lumail.lua')
source=('git://github.com/skx/lumail.git')
md5sums=(SKIP)

pkgver() {
    cd "$_gitname"
    git describe --always | sed 's|-|.|g'
}

build() {
    cd "$_gitname"
    make
}

package() {
    cd "$_gitname"
    install -d $pkgdir/etc
    install -d $pkgdir/usr/bin
    cp ./lumail.lua "$pkgdir/etc/lumail.lua"
    cp ./lumail $pkgdir/usr/bin/
}

